<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    
    <SolidColorBrush x:Key="PrimaryColor" Color="Blue"></SolidColorBrush>
    <SolidColorBrush x:Key="HoverColor" Color="AliceBlue"></SolidColorBrush>
    <SolidColorBrush x:Key="DisabledColor" Color="LightGray"></SolidColorBrush>

    <sys:Double x:Key="ControlHeight">30</sys:Double>
    <sys:Double x:Key="ControlWidth">120</sys:Double>

    <Style x:Key="BaseButtonStyle">
        <Setter Property="Button.Height" Value="{StaticResource ControlHeight}"/>
        <Setter Property="Button.Width" Value="{StaticResource ControlWidth}"/>
        <Setter Property="Button.Margin" Value="5"/>
        <Setter Property="Button.Background" Value="{DynamicResource PrimaryColor}"/>
        <Setter Property="Button.Foreground" Value="White"/>
    </Style>

    <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="10,0,0,10"/>
    </Style>


</ResourceDictionary>